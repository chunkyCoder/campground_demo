<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to YelpCamp!!</h1>
            <p>View our hand-picked campgrounds from around the world.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(sites) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= sites.image %>">
                    <div class="caption">
                        <h4><%= sites.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= sites._id %>" class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>
        <% }) %>

    </div>

</div>

<% include ../partials/footer %>